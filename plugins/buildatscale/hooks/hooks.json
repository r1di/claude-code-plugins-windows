{
  "description": "Git workflow hooks - Windows compatible (uses Node.js instead of bash)",
  "hooks": {
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/block-force-git.js\""
          }
        ],
        "matcher": "Bash"
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/file-write-cleanup.js\""
          }
        ],
        "matcher": "Write|Edit|MultiEdit"
      }
    ]
  }
}
